<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.a.testproject.ImageUpload"
    tools:showIn="@layout/activity_image_upload">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="200px"
            android:layout_height="200px"
            android:id="@+id/ivCamera"
            android:src="@drawable/camera"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <ImageView
            android:layout_width="200px"
            android:layout_height="200px"
            android:id="@+id/ivGallery"
            android:src="@drawable/gallery"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/linearLayout"
            android:layout_toEndOf="@+id/linearLayout"
            android:layout_marginLeft="150dp"
             />

    </LinearLayout>

    <ImageView
        android:layout_width="355dp"
        android:layout_height="250dp"
        android:id="@+id/ivImage"
        android:src="@drawable/rent_house"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="200px"
        android:layout_height="200px"
        android:id="@+id/ivUpload"
        android:onClick="ivUpload"
        android:src="@drawable/upload"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_alignRight="@+id/ivImage"
        android:layout_alignEnd="@+id/ivImage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvSkip"
        android:text="SKIP"
        android:textSize="20dp"
        android:layout_marginLeft="250dp"
        android:textStyle="bold"
        android:textColor="#4d92fa"
        android:onClick="tvSkip"/>


</LinearLayout>
