<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.a.testproject.YourInfoDetails"
    tools:showIn="@layout/activity_your_info_details">

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/imgView"
        android:src="@drawable/home"
        android:layout_marginTop="-1dp"
        android:onClick="Home"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:id="@+id/linearLayout">

        <ImageView
            android:layout_width="340dp"
            android:layout_height="240dp"
            android:layout_gravity="center"
            android:id="@+id/ivYourInfo"
            android:src="@drawable/house"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/detail_City"
                android:layout_below="@+id/linearLayout"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="City" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/detail_Street"
                android:layout_below="@+id/detail_City"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="Street" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/detail_Area"
                android:layout_below="@+id/detail_Street"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="Area" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/detail_House_number"
                android:layout_below="@+id/linearLayout"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="House_number" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/detail_price"
                android:layout_below="@+id/detail_City"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="Price" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/detail_Contact"
                android:layout_below="@+id/detail_Street"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="Contact" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/detail_Type"
                android:text="Type"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnEdit"
                android:onClick="btnEdit"
                android:text="EDIT"/>


            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnDelete"
                android:onClick="btnDelete"
                android:text="DELETE"
                android:layout_marginLeft="50dp"/>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
